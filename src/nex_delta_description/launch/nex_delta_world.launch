<launch>
  <!-- Set spawn location parameters -->
  <arg name="x_pos" default="-4.0"/>
  <arg name="y_pos" default="4.0"/>
  <arg name="z_pos" default="1.0"/>

  <!-- Define the namespace argument -->
  <arg name="namespace" default="robot1"/>

  <!-- Launch an empty Gazebo world using our world file -->
  <include file="$(find gazebo_ros)/launch/empty_world.launch">
    <arg name="world_name" value="$(find nex_delta_description)/worlds/delta_world.world"/>
    <arg name="paused" value="false"/>
    <arg name="use_sim_time" value="true"/>
    <arg name="gui" value="true"/>
    <arg name="headless" value="false"/>
    <arg name="debug" value="false"/>
  </include>

  <!-- Process the URDF using xacro and pass the namespace argument -->
  <param name="robot_description" 
         command="$(find xacro)/xacro --inorder $(find nex_delta_description)/urdf/nex_delta.urdf.xacro namespace:=$(arg namespace)" />

  <!-- Spawn the robot into Gazebo -->
  <node pkg="gazebo_ros" type="spawn_model" name="spawn_urdf" output="screen"
        args="-urdf -model nex_delta -x $(arg x_pos) -y $(arg y_pos) -z $(arg z_pos) -param robot_description" />
</launch>
